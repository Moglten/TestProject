@page
@model ClientProductApp.Pages.ClientPages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-center m-4">Clients</h1>

<p>
    <a asp-page="Create" class="btn btn-primary float-end me-4 mb-3">Create New</a>
</p>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ClientList[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClientList[0].Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClientList[0].Class)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClientList[0].State)
                    </th>
                    <th> Actions </th>
                    <th> Attaching </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ClientList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SName)
                        </td>
                        <td>
                            <a class="btn btn-outline-secondary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a class="btn btn-outline-info" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                        <td>
                            <a class="btn btn-info" asp-page="./AttachProduct" asp-route-id="@item.Id">Products</a> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <!-- Page level plugins -->
    <script src="~/dashboard/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/dashboard/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/dashboard/js/demo/datatables-demo.js"></script>
}
