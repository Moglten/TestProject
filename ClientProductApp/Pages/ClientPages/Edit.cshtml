@page
@model ClientProductApp.Pages.ClientPages.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="d-flex justify-content-center align-items-center" style="width:80%; height: 100vh;">
    <div class="text-center">

        <h1 class="h3 text-gray-900 m-4">Edit an Client!</h1>

        <form method="post">
            <div class="form-group row">
                <div class="col-lg-12 col-sm-6 mb-3">
                    <input asp-for="Client.Name" type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="Name">
                    <span asp-validation-for="Client.Name" class="text-danger"></span>

                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <select asp-for="Client.Class" asp-items="@Model.ClassList" class="form-control rounded-3"></select>
                    <span asp-validation-for="Client.Class" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <select asp-for="Client.State" asp-items="@Model.ClassState" class="form-control rounded-3"></select>
                    <span asp-validation-for="Client.Class" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-12 col-sm-6 d-none">
                <input asp-for="Client.Code">
                <input asp-for="Client.Id">
            </div>
            <button type="submit" class="btn btn-primary btn-user btn-block">
                Submit
            </button>

        </form>

    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
