@page
@model ClientProductApp.Pages.ClientPages.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="width:80%; height: 100vh;">
    <div class="text-center">

        <h1 class="h3 text-gray-900 m-4">Create an Client!</h1>

        <form class="user" id="client" method="post">
            <div class="form-group row">
                <div class="col-lg-12 col-sm-6 mb-3">
                    <input asp-for="InputedClient.Name" type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="Name">
                    <span asp-validation-for="InputedClient.Name" class="text-danger"></span>

                </div>
                <div class="col-lg-12 col-sm-6">
                    <input asp-for="InputedClient.Code" type="number" class="form-control form-control-user" id="exampleFirstName" placeholder="Code">
                    <span asp-validation-for="InputedClient.Code" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <select asp-for="InputedClient.Class" asp-items="@Model.ClassList" class="form-control rounded-3"></select>
                    <span asp-validation-for="InputedClient.Class" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <select asp-for="InputedClient.State" asp-items="@Model.ClassState" class="form-control rounded-3"></select>
                    <span asp-validation-for="InputedClient.Class" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-user btn-block">
                Submit
            </button>
            <button  class="btn btn-outline-secondary">
                Back to List
            </button>

        </form>

    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
