@page
@model ClientProductApp.Pages.ClientPages.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="m-5">

<h1>Details</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.Class)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.CName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.SName)
        </dd>
    </dl>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Activiation
            </th>
        </tr>
    </thead>
    <tbody>
            @if(Model.Client.AttachedProducts.Count == 0) {
                <tr>
                    <td colspan="3">
                        <p class="text-center">No Products</p>
                    </td>
                </tr>
            }
            
            @foreach (var item in Model.Client.AttachedProducts)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @if (item.IsActive) {
                            <p>Active</p>
                        } else {
                            <p>InActive</p>
                                }
                    </td>

                </tr>
                    }
                    </tbody>
</table>
<div class="float-end">
    <a asp-page="./Edit" class="btn btn-outline-secondary" asp-route-id="@Model.Client.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
</div>