@page
@model ClientProductApp.Pages.ClientPages.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="m-5">

<h1>Delete</h1>

    <h3>Are you sure you want to delete this Client?</h3>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.Class)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.CName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.SName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="@Model.Client.Id" />
        <input type="hidden" asp-for="@Model.Client.Code" />
        <input type="hidden" asp-for="@Model.Client.Name" />
        <button type="submit" class="btn btn-danger" asp-route-id="@Model.Client.Id">Delete</button> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

